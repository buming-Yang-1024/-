<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.woniu01.mapper.UserMapper">

    <sql id="Base_Column_List">
        uid,uname,password,
        email,phone,registTime,balance
    </sql>
    <insert id="insert">
        insert into user(uname,password,email,phone,balance)
        values(#{uname},#{password},#{email},#{phone},#{balance})
    </insert>
    <update id="update">
         update user
         <set>
             <if test="uname!=null">
                 uname=#{uname},
             </if>
         <if test="password!=null">
             password=#{password},
         </if>
         <if test="email!=null">
             email=#{email},
         </if>
         <if test="phone!=null">
             phone=#{phone},
         </if>
         <if test="balance!=null">
             balance=#{balance},
         </if>
         <if test="registtime!=null">
             registTime=#{registtime},
         </if>
         </set>
        where uid=#{uid}
    </update>
    <select id="selectByName" resultType="com.woniu01.entity.User">
        select * from user where uname=#{uname}
    </select>
    <select id="selectByEmail" resultType="com.woniu01.entity.User">
        select * from user where email= #{email}
    </select>
    <select id="selectByNameAndPassword" resultType="com.woniu01.entity.User">
        select * from user where uname=#{uname} and password=#{password}
    </select>

</mapper>
