<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.woniu01.mapper.AddressMapper">

    <sql id="Base_Column_List">
        aid,aname,uid
    </sql>

    <insert id="insert">
        insert into address(aid,aname,uid,phone,email,isDelete)
        values(null,#{aname},#{user.uid},#{phone},#{email},default)
    </insert>
    <update id="update">
        update address
        <set>
            <if test="aname!=null || aname !='' ">
                aname=#{aname},
            </if>
            <if test="user!=null">
                uid=#{user.uid},
            </if>
            <if test="phone!=null || aname !='' ">
                phone=#{phone},
            </if>
            <if test="email!=null || aname !='' ">
                email=#{email}
            </if>
        </set>
        where aid=#{aid} and isDelete=0
    </update>
    <delete id="deleteByName">
        update address set isDelete=1 where aname=#{aname}
    </delete>
    <delete id="deleteByAid">
        update address set isDelete=1 where aid=#{aid}
    </delete>
    <select id="selectAll" resultMap="AddressMapper">
        select * from address where isDelete=0
    </select>
    <resultMap id="AddressMapper" type="address">
        <id property="aid" column="aid"/>
        <result column="aname" property="aname"/>
        <result column="phone" property="phone"/>
        <result column="email" property="email"/>
        <result column="isDelete" property="isDelete"/>
        <association property="user"  javaType="user" select="selectByUid" column="uid">
            <id property="uid" column="uid"/>
            <result property="uname" column="uname"/>
            <result column="password" property="password"/>
            <result column="email" property="email"/>
            <result column="phone" property="phone"/>
            <result column="balance" property="balance"/>
            <result column="registTime" property="registtime"/>
        </association>
    </resultMap>
    <select id="selectByUid" resultType="user">
        select * from user where uid=#{uid}
    </select>
    <select id="selectById" resultMap="AddressMapper">
        select * from address where aid=#{aid} and isDelete=0
    </select>
    <select id="selectByName" resultMap="AddressMapper">
        select * from address where aname= #{aname} and isDelete=0
    </select>
    <select id="selectAddressByUid" resultType="address">
        select * from address where uid=#{uid} and isDelete=0
    </select>
</mapper>
